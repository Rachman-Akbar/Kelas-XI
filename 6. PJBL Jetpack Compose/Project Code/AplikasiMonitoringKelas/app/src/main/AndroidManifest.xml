<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet Permission -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AplikasiMonitoringApp"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">
        
        <!-- Main Activity (Login) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AplikasiMonitoringApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Role-based Activities -->
        <activity
            android:name=".SiswaActivity"
            android:exported="false"
            android:label="Siswa Dashboard"
            android:theme="@style/Theme.AplikasiMonitoringApp" />
            
        <activity
            android:name=".KurikulumActivity"
            android:exported="false"
            android:label="Kurikulum Dashboard"
            android:theme="@style/Theme.AplikasiMonitoringApp" />
            
        <activity
            android:name=".KepalaSekolahActivity"
            android:exported="false"
            android:label="Kepala Sekolah Dashboard"
            android:theme="@style/Theme.AplikasiMonitoringApp" />
            
        <activity
            android:name=".AdminActivity"
            android:exported="false"
            android:label="Admin Dashboard"
            android:theme="@style/Theme.AplikasiMonitoringApp" />
            
    </application>

</manifest>