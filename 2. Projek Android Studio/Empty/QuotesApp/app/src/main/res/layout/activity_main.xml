<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_background"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Logo ImageView -->
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="@string/app_logo" />

    <!-- Container for Quote and Author -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center">

        <!-- Quote TextView with custom background -->
        <TextView
            android:id="@+id/tv_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/textview_background"
            android:padding="24dp"
            android:text="@string/sample_quote"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="italic"
            android:lineSpacingExtra="4dp"
            android:gravity="center" />

        <!-- Author TextView -->
        <TextView
            android:id="@+id/tv_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sample_author"
            android:textColor="@color/green_accent"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

    </LinearLayout>

    <!-- Share Button -->
    <Button
        android:id="@+id/btn_share"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:text="@string/share_option"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:drawableEnd="@android:drawable/ic_menu_share"
        android:drawablePadding="8dp"
        android:gravity="center" />

</LinearLayout>