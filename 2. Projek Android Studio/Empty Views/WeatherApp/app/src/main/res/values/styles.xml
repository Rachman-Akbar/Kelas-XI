<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WeatherText">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="WeatherText.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WeatherText.Temperature">
        <item name="android:textSize">72sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="WeatherText.Condition">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WeatherText.Details">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
    </style>

    <style name="SearchText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:textColorHint">@color/text_secondary</item>
    </style>
</resources>
