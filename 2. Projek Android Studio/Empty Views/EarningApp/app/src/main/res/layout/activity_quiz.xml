<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Clean Quiz Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/primary"
        android:gravity="center_vertical">

        <!-- Subject Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_book"
                android:layout_marginEnd="8dp"
                app:tint="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSubjectName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Matematika"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvQuestionCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soal 1 dari 10"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:alpha="0.8" />

            </LinearLayout>

        </LinearLayout>

        <!-- Timer -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="12dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_access_time"
                android:layout_marginEnd="4dp"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Score -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="12dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_stars"
                android:layout_marginEnd="4dp"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Exit Button -->
        <ImageView
            android:id="@+id/btnQuit"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_exit_to_app"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:tint="@color/white" />

    </LinearLayout>
    <!-- Loading State -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:visibility="visible" />

    <!-- Quiz Content -->
    <LinearLayout
        android:id="@+id/layoutQuiz"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/spacing_md"
        android:visibility="gone">

        <!-- Question Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg"
            app:cardCornerRadius="@dimen/border_radius_md"
            app:cardElevation="@dimen/elevation_sm"
            app:cardBackgroundColor="@color/white">

            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pertanyaan akan muncul di sini..."
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:padding="@dimen/spacing_lg"
                android:lineSpacingExtra="4dp" />

        </androidx.cardview.widget.CardView>

        <!-- Answer Options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/spacing_lg">

            <Button
                android:id="@+id/btnAnswer1"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:text="Pilihan A"
                android:textSize="14sp"
                android:gravity="left|center_vertical"
                android:paddingHorizontal="@dimen/spacing_lg"
                android:backgroundTint="@color/surface_light"
                android:textColor="@color/text_primary"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <TextView
                android:id="@+id/tvAnswer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jawaban A"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnAnswer2"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:text="Pilihan B"
                android:textSize="14sp"
                android:gravity="left|center_vertical"
                android:paddingHorizontal="@dimen/spacing_lg"
                android:backgroundTint="@color/surface_light"
                android:textColor="@color/text_primary"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <TextView
                android:id="@+id/tvAnswer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jawaban B"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnAnswer3"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:text="Pilihan C"
                android:textSize="14sp"
                android:gravity="left|center_vertical"
                android:paddingHorizontal="@dimen/spacing_lg"
                android:backgroundTint="@color/surface_light"
                android:textColor="@color/text_primary"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <TextView
                android:id="@+id/tvAnswer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jawaban C"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnAnswer4"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:text="Pilihan D"
                android:textSize="14sp"
                android:gravity="left|center_vertical"
                android:paddingHorizontal="@dimen/spacing_lg"
                android:backgroundTint="@color/surface_light"
                android:textColor="@color/text_primary"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <TextView
                android:id="@+id/tvAnswer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jawaban D"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Next Button -->
        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Lanjut"
            android:textSize="16sp"
            android:textStyle="bold"
            android:enabled="false"
            android:backgroundTint="@color/primary"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>
