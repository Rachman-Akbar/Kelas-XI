<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_primary"
    android:fitsSystemWindows="true">

    <!-- Logo Container with Animation -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvLogoContainer"
        android:layout_width="@dimen/logo_size_xl"
        android:layout_height="@dimen/logo_size_xl"
        app:cardCornerRadius="@dimen/border_radius_round"
        app:cardElevation="@dimen/elevation_xl"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <ImageView
            android:id="@+id/ivAppLogo"
            android:layout_width="@dimen/logo_size_md"
            android:layout_height="@dimen/logo_size_md"
            android:layout_gravity="center"
            android:src="@drawable/ic_app_logo"
            android:contentDescription="App Logo"
            app:tint="@color/primary" />

    </androidx.cardview.widget.CardView>

    <!-- App Title -->
    <TextView
        android:id="@+id/tvAppTitle"
        style="@style/TextStyle.Display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xxl"
        android:text="EarningApp"
        android:textColor="@color/white"
        android:letterSpacing="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvLogoContainer" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        style="@style/TextStyle.Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_sm"
        android:text="Dapatkan koin dengan bermain!"
        android:textColor="@color/white"
        android:alpha="0.9"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAppTitle" />

    <!-- Loading Section -->
    <LinearLayout
        android:id="@+id/llLoadingSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_huge"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle">

        <!-- Loading Progress -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/border_radius_round"
            app:cardElevation="@dimen/elevation_sm"
            app:cardBackgroundColor="@color/white_alpha_20">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="@dimen/progress_size_lg"
                android:layout_height="@dimen/progress_size_lg"
                android:layout_margin="@dimen/spacing_md"
                android:indeterminateTint="@color/white" />

        </androidx.cardview.widget.CardView>

        <!-- Loading Text -->
        <TextView
            android:id="@+id/tvLoadingText"
            style="@style/TextStyle.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            android:text="Memuat aplikasi..."
            android:textColor="@color/white"
            android:alpha="0.8" />

    </LinearLayout>

    <!-- Version Info -->
    <TextView
        android:id="@+id/tvVersionInfo"
        style="@style/TextStyle.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_xl"
        android:text="Versi 1.0.0"
        android:textColor="@color/white"
        android:alpha="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Debug Skip Button -->
    <Button
        android:id="@+id/btnSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_md"
        android:text="Skip"
        android:textColor="@color/white"
        android:background="@android:color/transparent"
        android:alpha="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
