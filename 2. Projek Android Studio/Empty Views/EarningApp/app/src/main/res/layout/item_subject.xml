<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardSubject"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_sm"
    android:layout_marginVertical="@dimen/spacing_xs"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_lg"
        android:minHeight="120dp"
        android:gravity="center">

        <!-- Subject Icon -->
        <ImageView
            android:id="@+id/ivSubjectIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_school"
            app:tint="@color/primary"
            android:layout_marginBottom="@dimen/spacing_md" />

        <!-- Subject Name -->
        <TextView
            android:id="@+id/tvSubjectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Matematika"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_marginBottom="@dimen/spacing_sm" />

        <!-- Subject Description -->
        <TextView
            android:id="@+id/tvSubjectDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="Pelajari konsep matematika dasar hingga lanjutan"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:gravity="center"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
