<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- Network security config for debugging -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:name=".EarningApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EarningApp"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">
        
        <!-- Splash Screen as Main Launcher -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:hardwareAccelerated="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.EarningApp" />

        <!-- Simple Main Activity (Emergency Backup) -->
        <activity
            android:name=".SimpleMainActivity"
            android:exported="false"
            android:theme="@style/Theme.EarningApp" />

        <!-- Authentication Activities -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.EarningApp" />
        
        <!-- Registration Activity -->
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.EarningApp" />

        <!-- Simple Registration Activity (Fallback) -->
        <activity
            android:name=".ui.auth.SimpleRegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.EarningApp" />

        <!-- Quiz Activity -->
        <activity
            android:name=".ui.quiz.QuizActivity"
            android:exported="false"
            android:theme="@style/Theme.EarningApp"
            android:screenOrientation="portrait" />

        <!-- Difficulty Selection Activity -->
        <activity
            android:name=".ui.quiz.DifficultySelectionActivity"
            android:exported="false"
            android:theme="@style/Theme.EarningApp"
            android:screenOrientation="portrait" />

        <!-- Debug Activity for Firebase Testing -->
        <activity
            android:name=".ui.debug.DebugActivity"
            android:exported="false"
            android:theme="@style/Theme.EarningApp" />

        <!-- Data Import Activity for Admin -->
        <activity
            android:name=".ui.admin.DataImportActivity"
            android:exported="false"
            android:theme="@style/Theme.EarningApp"
            android:screenOrientation="portrait" />
        
        <!-- Spin Wheel Activity -->
        <activity
            android:name=".SpinWheelActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        
        <!-- Leaderboard Activity -->
        <activity
            android:name=".LeaderboardActivity"
            android:exported="false"
            android:theme="@style/Theme.EarningApp" />
        
        <!-- Profile Activity -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        
        <!-- File Provider for image sharing -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
            
    </application>

</manifest>